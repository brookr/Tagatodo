%h3= best_in_place @todo, :title, :type => :input

- @todo.tag_list = 'Click to Add Tag' if @todo.tag_list.empty?

%p= best_in_place @todo, :tag_list, :type => :input

%p= best_in_place @todo, :notes, :type => :textarea

%p
  %strong Is this task completed?
  = best_in_place @todo, :completed, :type => :checkbox
